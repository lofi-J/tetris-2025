{
  "files": {
    "ignoreUnknown": true,
    "experimentalScannerIgnores": ["node_modules"]
  },

  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "options": {
          "indentifierOrder": "natural"
        }
      }
    }
  },

  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "attributePosition": "auto"
  },

  "linter": {
    "rules": {
      "recommended": true
    }
  }
}
